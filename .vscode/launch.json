{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: App",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--use-colors"
            ],
            "pythonPath": "${workspaceFolder}/.venv/Scripts/python.exe",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "DATABASE_URL": "tu_url_de_conexion"
            }
        }
    ]
}